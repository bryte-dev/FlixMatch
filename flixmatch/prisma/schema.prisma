generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  watchlist Watchlist[]
  reviews  Review[]  // ðŸ”¥ Un utilisateur peut Ã©crire plusieurs reviews
}

model Movie {
  id          Int        @id @default(autoincrement())
  tmdb_id     Int        @unique
  title       String
  media_type  String
  poster_path String
  watchlist   Watchlist[]  // ðŸ”¥ Changement en `Watchlist[]` pour autoriser plusieurs entrÃ©es
  reviews     Review[]  // ðŸ”¥ Un film peut recevoir plusieurs reviews
}

model Watchlist {
  id         Int     @id @default(autoincrement())
  movieId    Int     
  userId     Int 
  isFavorite Boolean @default(false)
  status     String  @default("WATCHLIST")
  rating     Int?    

  movie Movie @relation(fields: [movieId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([movieId, userId]) // ðŸ”¥ Garantit qu'un film ne peut apparaÃ®tre qu'une seule fois par utilisateur
}

model Review {
  id         Int       @id @default(autoincrement())
  userId     Int
  movieId    Int
  rating     Int       // Note entre 1 et 5
  comment    String
  createdAt  DateTime  @default(now())

  // ðŸ”¹ Relation avec les utilisateurs
  user       User      @relation(fields: [userId], references: [id])

  // ðŸ”¹ Relation avec les films
  movie      Movie     @relation(fields: [movieId], references: [id])

  // ðŸ”¹ Gestion des rÃ©ponses aux avis (auto-rÃ©fÃ©rence)
  parentId   Int?      
  parent     Review?   @relation(name: "ReviewReplies", fields: [parentId], references: [id])
  replies    Review[]  @relation(name: "ReviewReplies")
}

enum WatchlistStatus {
  WATCHLIST
  SEEN
  JUNK
}
