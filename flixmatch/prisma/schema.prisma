generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  watchlist Watchlist[]
}

model Movie {
  id          Int        @id @default(autoincrement())
  tmdb_id     Int        @unique
  title       String
  media_type  String
  poster_path String
  watchlist   Watchlist?
}

model Watchlist {
  id         Int     @id @default(autoincrement())
  movieId    Int     @unique
  userId     Int 
  isFavorite Boolean @default(false)
  status     String  @default("WATCHLIST")
  rating     Int?    

  movie Movie @relation(fields: [movieId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}


enum WatchlistStatus {
  WATCHLIST
  SEEN
  JUNK
}
